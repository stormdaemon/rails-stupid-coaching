<div class="container py-5">
  <h1 class="mb-4 text-center">Ask a Question</h1>

  <form action="<%= answer_path %>" data-turbo="false" class="d-flex flex-column align-items-center gap-3">
    <input
      type="text"
      name="ask"
      class="form-control w-75"
      placeholder="Type your question here..."
      required
    >
    <input
      type="submit"
      value="Ask!"
      class="btn btn-primary"
    >
  </form>
</div>
